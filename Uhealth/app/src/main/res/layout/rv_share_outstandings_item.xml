<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp">

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"
       android:padding="10dp"
       android:elevation="10dp">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/outstanding_fromusername"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="From user"/>

           <TextView
               android:id="@+id/outstanding_fromemail"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/outstanding_fromusername"
               android:text="From email"/>
           <TextView
               android:id="@+id/expire_label"
               android:layout_below="@id/outstanding_fromemail"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Expires: "/>
           <TextView
               android:id="@+id/outstanding_expiredate"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/outstanding_fromemail"
               android:gravity="end"
               android:layout_alignParentEnd="true"
               android:text="expire on"/>
           <Button
               android:id="@+id/outstanding_decline"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/outstanding_expiredate"
               android:layout_alignParentStart="true"
               android:text="Decline"/>
           <Button
               android:id="@+id/outstanding_accept"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/outstanding_expiredate"
               android:layout_alignParentEnd="true"
               android:text="Accept"/>

       </RelativeLayout>


   </androidx.cardview.widget.CardView>



</RelativeLayout>