<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.uhealth">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UHealth">


        <activity android:name=".Activity.Do_questions"
            android:parentActivityName=".Activity.Questionnaire"/>

        <activity android:name=".Activity.Questionnaire"
            android:parentActivityName=".Activity.ProfilePage"/>

        <activity
            android:name=".Activity.ProfilePage"
            android:exported="true"
            android:parentActivityName=".Activity.MainActivity"
            android:theme="@style/Theme.UHealth.nobar" />

        <activity
            android:name=".Activity.InitRegPage"
            android:exported="true"
            android:noHistory="true"
            android:theme="@style/Theme.UHealth.nobar" />

        <activity
            android:name=".Activity.SignUpPage"
            android:exported="true"
            android:noHistory="true"
            android:parentActivityName=".Activity.LoginPage"
            android:theme="@style/Theme.UHealth" />

        <activity
            android:name=".Activity.LoginPage"
            android:exported="true"
            android:theme="@style/Theme.UHealth.nobar" />

        <activity
            android:name=".MedicationAdder"
            android:label="@string/title_activity_medication_adder"
            android:theme="@style/Theme.UHealth.NoActionBar"></activity>

        <activity
            android:name=".AppointmentAdder"
            android:label="@string/title_activity_appointment_adder"
            android:theme="@style/Theme.UHealth.NoActionBar" />

        <activity
            android:name=".MedicationList"
            android:label="@string/title_activity_medication_list"
            android:theme="@style/Theme.UHealth.NoActionBar" />

        <activity
            android:name=".AppointmnetList"
            android:label="@string/title_activity_appointmnet_list"
            android:theme="@style/Theme.UHealth.NoActionBar" />

        <activity android:name=".Activity.MainActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>